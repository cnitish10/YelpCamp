<%- include('../partials/header'); -%>

<div class="container">
    <header class="jumbotron" >
            <div class="container">
                <h1>Welcome to the Campground page</h1>
                <p>
                    <a class="btn btn-primary btn-large" href="/campgrounds/new">add your own  campgrounds</a>
                </p>
                
            </div>
       
    </header>
     
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campground.forEach((x)=>{%>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail" >
                
                    <img src="<%= x.image %>" alt="<%=x.name%>" class="img-thumbnail" >
                <div class="caption" ><h3><%= x.name%></h3> 
                    <p><a href="/campgrounds/<%= x._id%>" class="btn btn-primary">More Info</a></p>
                </div>
               </div>
               </div>
        <%})%>
</div> 
</div> 
<%- include('../partials/footer'); -%>