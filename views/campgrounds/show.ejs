        <div class="col-md-9">
           <div class="img-thumbnail">
            <img class="img-fluid img-thumbnail" src="<%= campground.image %>" alt="image">
            <div class="caption-full">
                
               <div class="float-right"><h4><%= campground.price %> Rs/night</h4></div> 
               <div  ><h4 ><a href="<%= campground.name %>"><%= campground.name %></a></h4>
        
